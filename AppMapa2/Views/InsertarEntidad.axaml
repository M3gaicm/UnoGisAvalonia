<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="AppMapa2.Views.InsertarEntidad"
        Title="InsertarEntidad"
        Width="300" Height="200">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<!-- Texto -->
		<TextBlock Text="Texto 1:" Margin="0 5"/>
		<TextBox x:Name="txtTexto" Margin="0 5" Width="200"/>

		<!-- Número -->
		<TextBlock Text="Número 1:" Margin="0 5"/>
		<TextBox x:Name="txtNumero" Margin="0 5" Width="200"/>
		<Label Target="upDown" FontSize="14" FontWeight="Bold" VerticalAlignment="Center">Numero 3:</Label>
		<NumericUpDown Name="upDown" Minimum="0" Maximum="10" Increment="0.5"
                       VerticalAlignment="Center"
                       Watermark="Enter text"/>
	</StackPanel>
</Window>
